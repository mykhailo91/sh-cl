<script>
  $('#site-header').show();
</script>
<div class="my-activities-nav">  
  <div class="container">
    <div class="container-wrapper">
      <h1>{{t 'my_activities'}}</h1>
      <nav class="my-activities-dropdown my-activities-dropdown-main">
        <ul class="my-activities-dropdown-items list-unstyled">
          <li class="my-activities-dropdown-item">{{link 'requests'}}</li>
          <li class="my-activities-dropdown-item is-active">{{t 'contributions'}}</li>
          <li class="my-activities-dropdown-item">{{link 'subscriptions'}}</li>
        </ul>
      </nav>
    </div>
  </div>
</div>

<div class="container">
  <div class="container-wrapper">

    <nav class="my-activities-dropdown my-activities-dropdown-sub">
      <ul class="my-activities-dropdown-items list-unstyled">
      {{#each filters}}
        {{#if selected}}
        <li class="my-activities-dropdown-item is-active">
          {{name}}
        </li>
        {{else}}
        <li class="my-activities-dropdown-item">
          <a href="{{url}}">{{name}}</a>
        </li>
        {{/if}}
      {{/each}}
      </ul>
    </nav>

    {{#if contributions}}
      <table class="my-activities-lists">
        <thead class="my-activities-lists-head">
          <tr class="my-activities-lists-row">
            <th class="my-activities-lists-col">{{t 'title'}}</div>
            <th class="my-activities-lists-col">{{t 'vote_sum'}}</div>
            <th class="my-activities-lists-col">{{t 'last_activity'}}</div>
            <th class="my-activities-lists-col">{{t 'created'}}</div>
          </tr>
        </thead>
        <tbody class="my-activities-lists-body">
          {{#each contributions}}
            <tr class="my-activities-lists-row my-activities-list">
              <td class="my-activities-lists-col">
                <a class="my-activities-list-title" href="{{url}}">
                  {{excerpt title characters=60}}
                </a>
              </td>
              <td class="my-activities-lists-col my-activities-list-meta">
                <span class="fa fa-thumbs-up my-activities-list-icon"></span> {{vote_sum}}
              </td>
              <td class="my-activities-lists-col my-activities-list-meta">{{date last_activity_at}}</div>
              <td class="my-activities-lists-col my-activities-list-meta">{{date created_at}}</div>
            </tr>
          {{/each}}
        </tbody>
      </table>
      {{pagination}}
    {{else}}
      <p>{{t 'no_contributions'}}</p>
    {{/if}}
  </div>
</div>