<script>
  $('.search-full').hide();
  $('#site-header').show();
</script>
<div class="container topic-list-container">
  <div class="container-wrapper">
    <div class="row clearfix" style="margin-bottom: 1em;">
      <div class="col col-sm-8">
        {{breadcrumbs}}
      </div>
      <div class="col col-sm-4">
        <nav class="community-nav">
          <span class="dropdown">
              <button class="dropdown-toggle btn btn-default" aria-haspopup="true">
                <span class="title">
                  {{t 'community_topics'}}
                </span>
              </button>
            <span class="dropdown-menu" role="menu">
              {{#link 'topics' role='menuitem' selected='true'}}
                {{t 'show_topics'}}
              {{/link}}
              {{#link 'posts' role='menuitem'}}
                {{t 'show_all_posts'}}
              {{/link}}
            </span>
          </span>
        </nav>
      </div>
    </div>

    {{#if topics}}
      <ul class="list-unstyled row topic-list clearfix">
        {{#each topics}}
          <li class="col col-sm-6 topic-list-item">
            <div class="topic-list-item-box">
              <h3 class="topic-list-item-title">
                {{#if internal}}
                  <span class="fas fa-lock" title="{{t 'internal'}}"></span>
                {{/if}}
                <a href="{{url}}">{{name}}</a>
              </h3>
              <span class="meta topic-list-item-meta">
                <span class="meta-item">{{t 'post_count' count=post_count}}</span>
                <span class="meta-item">{{t 'follower_count' count=follower_count}}</span>
              </span>
            </div>
          </li>
        {{/each}}
      </ul>

      {{pagination}}
    {{else}}
      <p>{{t 'no_content'}}</p>
    {{/if}}
    <div class="post-suggest">
      <h3 class="post-suggest-title">{{t 'suggest_new_post'}}</h3>
      {{link 'new_post' role='button' class='btn btn-primary'}}
    </div>
  </div>
</div>